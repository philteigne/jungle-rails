<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <%= image_tag @product.image.url, class: 'main-img' %>
    <div>
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <div class="quantity">
        <span><%= @product.quantity %> in stock at </span>
        <span><%= humanized_money_with_symbol @product.price %></span>
      </div>
      <div class="price">          
        <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn' , method: :post do %>
          <%= fa_icon "shopping-cart", text: 'Add' %>
        <% end %>          
      </div>
    </div>
  </article>
  <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [@product, @rating] do |form| %>

        <div class="form-group">
          <%= form.label :rating %>
          <%= form.select :rating, options_for_select((1..5).map { |n| [n.to_s, n] }) %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description %>
        </div>

        <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
      <% end %>
    </div>

  <table class="table table-bordered">
      <thead>
        <tr>
          <th>Rating</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @ratings.each do |rating| %>
          <%= render 'rating', rating: rating[:rating], description: rating[:description], users_id: rating[:users_id] %>
        <% end %>
      </tbody>
    </table>

</section>
